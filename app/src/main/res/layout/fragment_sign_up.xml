<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.signup.SignUpFragment">

    <ImageView
        android:id="@+id/fragment_sign_up_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"/>


    <EditText
        android:id="@+id/fragment_sign_up_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="25dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:hint="@string/email"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="15dp"
        android:background="@drawable/edit_text_background"/>

    <EditText
        android:id="@+id/fragment_sign_up_password_text"
        android:layout_below="@id/fragment_sign_up_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:hint="@string/password"
        android:singleLine="true"
        android:textColorHint="@color/white"
        android:password="true"
        android:textColor="@color/white"
        android:padding="15dp"
        android:background="@drawable/edit_text_background"/>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_marginTop="25dp"
        android:layout_below="@id/fragment_sign_up_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="@string/sign_up_text"/>

</RelativeLayout>