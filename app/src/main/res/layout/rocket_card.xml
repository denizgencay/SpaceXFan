<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rocket_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:background="@android:color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rocket_card_top_section_layout"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/rocket_card_rocket_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Falcon 9"/>

                <ImageView
                    android:id="@+id/rocket_card_favorite_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/ic_launcher"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/rocket_card_rocket_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rocket_card_top_section_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/ic_launcher"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>